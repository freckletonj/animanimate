// app.styl

@import url('http://fonts.googleapis.com/css?family=Open+Sans:300,400,400italic,600')

@import "colors"

base_font = 'Open Sans', 'Noto Sans', 'Helvetica Neue', 'Helvetica'
mono_font = 'Roboto Mono', 'Monaco', 'Menlo', 'Courier New', monospace


body
  margin-top 50px
  padding-top 10px
  font-family base_font
  font-size 16px
  background sol_background

a
  color sol_cyan
  &:hover
    color sol_cyan
    text-decoration underline

.container
  margin-bottom 50px

.col-centered
  display inline-block
  float none
  // Reset the text-align.
  text-align left
  // Inline-block space fix.
  margin-right -4px

.title
  text-align center
  margin-bottom 20px

.nav-tabs
  margin-bottom 30px
  > li
    > a
      color sol_cyan
    &.active > a
      background sol_background

.lead
  margin-bottom 35px
  font-weight 300

.animation-controls
  text-align center

.module-title
  text-align center
  font-size 22px
  margin 20px 0

.trial-label
  margin-bottom 25px
  font-size 22pt
  text-align right

.time-step-label
  margin-bottom 25px
  font-size 22pt
  text-align left

.btn-primary
  border none
  background sol_cyan

.module-canvas
  svg
    display block
    margin auto
    cursor default
    -webkit-user-select none
    -moz-user-select none
    -ms-user-select none
    -o-user-select none
    user-select none

.animation-controls
  .control-group
    text-align center
    margin-bottom 25px
  .control-label
    font-weight 600
    font-size 16px
    margin-left 20px

#speed-slider-container
  > .slider-horizontal
    width 150px

#timestep-slider-container
  > .slider-horizontal
    width 300px

#timestep-slider-container, #speed-slider-container
  display inline-block
  padding 4px 20px 6px 20px
  margin 0 20px
  background #eee
  border-radius 5px

.slider-handle
  background-color sol_cyan
  background-image none

#timestep
  text-align center
  font-size 150%

@import "network"
@import "environment"
@import "chart"
